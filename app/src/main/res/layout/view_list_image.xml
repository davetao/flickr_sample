<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="listImage"
            type="com.davetao.flickrsample.viewmodel.model.ListImage" />
    </data>
    <com.davetao.flickrsample.view.util.SquareImageView
        android:background="@color/imageBackground"
        app:imageUrl="@{listImage.url}"
        android:contentDescription="@{listImage.title}"
        android:id="@+id/list_image_item"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</layout>
